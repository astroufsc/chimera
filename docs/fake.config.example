  ccd_model: KAF XYZ 10
  telescope_focal_length: 2800.0 # mm
 
  filter_wheel_model: Fake Filters
  filters: "U B V R I"
  
focuser:
  name: fake
  type: FakeFocuser

  model: Fake Focuser
    
dome:
  name: fake
  type: FakeDome

  model: Fake Dome
  style: Rolloff

  mode: track
  telescope: /FakeTelescope/fake

controller:
  - type: Autofocus
    name: fake
    camera: /FakeCamera/fake
    filterwheel: /FakeFilterWheel/fake

  - type: ImageServer
    name: fake
    httpd: True
