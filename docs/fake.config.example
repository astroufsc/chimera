  port: 7666

site:
  name: MyObservatory
  latitude: "-25:20:30"
  longitude: "-48:10:20"
  altitude: 20

telescope:
  name: fake
  type: FakeTelescope

  model: Fake Telescope
  optics: SCT
  mount: Fake Mount
  aperture: 280.0 # mm
  focal_length: 2800.0 # mm
  focal_reduction: 0.5
  
